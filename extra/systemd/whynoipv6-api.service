[Unit]
Description=WhynoIPv6: API
After=network-online.target postgresql-16.service

[Service]
Type=simple
WorkingDirectory={{ project_path }}
ExecStart={{ bin_path }}/v6-api
ExecReload=/usr/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=30
User={{ user }}
Group={{ group}}

[Install]
WantedBy=multi-user.target
